{
	"name": "032_plDataMoveJsonToCsv",
	"properties": {
		"activities": [
			{
				"name": "Copy data from Json file to Csv file",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['people'][0]['firstName']"
								},
								"sink": {
									"name": "firstName"
								}
							},
							{
								"source": {
									"path": "$['people'][0]['lastName']"
								},
								"sink": {
									"name": "lastName"
								}
							},
							{
								"source": {
									"path": "$['people'][0]['gender']"
								},
								"sink": {
									"name": "gender"
								}
							},
							{
								"source": {
									"path": "$['people'][0]['age']"
								},
								"sink": {
									"name": "age"
								}
							},
							{
								"source": {
									"path": "$['people'][0]['number']"
								},
								"sink": {
									"name": "number"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "ds_032_Json_Storage",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ds_032_Json_Csv",
						"type": "DatasetReference"
					}
				]
			}
		],
		"folder": {
			"name": "032"
		},
		"annotations": []
	}
}